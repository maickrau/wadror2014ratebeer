<h1>Listing memberships</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Beer club</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.user_id %></td>
        <td><%= membership.beer_club_id %></td>
        <td><%= link_to 'Show', membership, class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_membership_path(membership), class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
