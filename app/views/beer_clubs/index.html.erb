<h1>Listing beer clubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
      <th>City</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
        <td><%= link_to 'Edit', edit_beer_club_path(beer_club) if not current_user.nil? %></td>
        <td><%= link_to 'Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' } if not current_user.nil? and current_user.admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New beer club', new_beer_club_path if not current_user.nil? %>
